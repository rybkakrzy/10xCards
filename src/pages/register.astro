---
import RegisterForm from '@/components/RegisterForm';
import Layout from '@/layouts/Layout.astro';

export const prerender = false;

// Note: Authentication and redirects are handled by middleware
// No need to check user here - middleware will redirect logged-in users
---

<Layout title="Rejestracja - 10xCards">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-amber-50 to-orange-100 py-8 px-4 sm:py-12 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-2">10xCards</h1>
        <h2 class="text-xl sm:text-2xl font-semibold text-gray-700">
          Utwórz nowe konto
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Rozpocznij naukę hiszpańskiego z AI
        </p>
      </div>
      <RegisterForm client:load />
    </div>
  </div>
</Layout>

